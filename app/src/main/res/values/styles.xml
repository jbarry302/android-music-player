<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"/>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGradient</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.SecondaryToolbar">
        <item name="title">Secondary Toolbar</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.ToolbarTitleText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppTheme.IndicatorNewStoreSmall">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">5dp</item>
    </style>
    <style name="AppTheme.IndicatorNewStoreMedium">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:elevation">5dp</item>
    </style><style name="AppTheme.IndicatorNewStoreLarge">
    <item name="textAllCaps">true</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
    <item name="android:elevation">5dp</item>
</style>



</resources>